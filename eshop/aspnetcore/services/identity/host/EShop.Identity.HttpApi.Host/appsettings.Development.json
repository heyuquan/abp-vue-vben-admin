{
  "App": {
    "SelfUrl": "https://localhost:44105",
    // [consul:http://localhost:8500]
    "CorsOrigins": "https://*.AuthServer.com,http://localhost:8500",
    "Name": "EShop.Identity.Service"
  },
  "AuthServer": {
    "ApiName": "EShop.Identity.Service",
    "Authority": "https://localhost:44115",
    "RequireHttpsMetadata": "true",

    "SwaggerClientId": "EShop.Identity.Service.Swagger",
    "SwaggerClientSecret": "",
    // 如果范围只有自己本身，那么不能放空，要把自己的client标识放进去，不然验证会报“无效的范围”
    "SwaggerClientScopes": [ "EShop.Identity.AuthServer", "EShop.Identity.Service" ]
  },
  "ServiceDiscovery": {
    "ServiceName": "EShop.Identity.Service",
    "Tags": [ "abp-vue-vben", "api" ],
    "Consul": {
      "HttpEndpoint": "http://localhost:8500"
    },
    "Endpoints": [
      "https://localhost:44105"
    ],
    "HealthCheck": {
      "HealthCheckTemplate": "/api/health",
      "Interval": 10
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "OpenIddict": {
    "Scopes": [
      {
        "Name": "Common",
        "Resources": [
          "EShop.Identity.AuthServer" // 认证服务
        ]
      },
      {
        "Name": "EshopUser",
        "Resources": [

        ]
      },
      {
        "Name": "AdminUser",
        "Resources": [
          "EShop.Identity.Service",
          "EShop.Administration.Service"
        ]
      },
      {
        "Name": "EShop.Identity.Service.Swagger",
        "Resources": [
          "EShop.Identity.Service"
        ]
      },
      {
        "Name": "EShop.Administration.Service.Swagger",
        "Resources": [
          "EShop.Administration.Service"
        ]
      },
      {
        "Name": "EShop.AdministrationAppGateway.Swagger",
        "Resources": [
          "EShop.AdministrationAppGateway"
        ]
      }
    ],
    "Applications": {
      "EShop.Identity.Service.Swagger": {
        "ClientId": "EShop.Identity.Service.Swagger",
        "ClientUri": "https://localhost:44105",
        "ClientType": "public",
        "ConsentType": "implicit",
        "Scopes": [ "EShop.Identity.Service.Swagger" ],
        "GrantTypes": [ "authorization_code" ],
        "RedirectUri": "/swagger/oauth2-redirect.html"
      },
      "EShop.Administration.Service.Swagger": {
        "ClientId": "EShop.Administration.Service.Swagger",
        "ClientUri": "https://localhost:44145",
        "ClientType": "public",
        "ConsentType": "implicit",
        "Scopes": [ "EShop.Administration.Service.Swagger" ],
        "GrantTypes": [ "authorization_code" ],
        "RedirectUri": "/swagger/oauth2-redirect.html"
      },
      "EShop.Administration.Web": {
        "ClientId": "EShop.Administration.Web",
        "ClientUri": "http://localhost:4200",
        "ClientType": "public",
        "ConsentType": "implicit",
        "Scopes": [ "AdminUser" ],
        "GrantTypes": [ "password" ]
      }
    }
  }
}
