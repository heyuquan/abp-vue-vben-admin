{
  "App": {
    "SelfUrl": "https://localhost:44105",
    // [consul:http://localhost:8500]
    "CorsOrigins": "https://*.AuthServer.com,http://localhost:8500",
    "Name": "EShop.Identity.Service"
  },
  "AuthServer": {
    "ApiName": "EShop.Identity.Service",
    "Authority": "https://localhost:44115",
    "RequireHttpsMetadata": "true",

    "SwaggerClientId": "EShop.Identity.Service.Swagger",
    "SwaggerClientSecret": "",
    // 如果范围只有自己本身，那么不能放空，要把自己的client标识放进去，不然验证会报“无效的范围”
    "SwaggerClientScopes": [ "EShop.Identity.Service" ]
  },
  "ServiceDiscovery": {
    "ServiceName": "EShop.Identity.Service",
    "Tags": [ "abp-vue-vben", "api" ],
    "Consul": {
      "HttpEndpoint": "http://localhost:8500"
    },
    "Endpoints": [
      "https://localhost:44105"
    ],
    "HealthCheck": {
      "HealthCheckTemplate": "/api/health",
      "Interval": 10
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "OpenIddict": {
    // EShop.Identity.AuthServer 自身不需要在ApiScopes资源里面，
    // 但是其 EShop.Identity.HttpApi.Host 是需要在ApiScopes资源里面的
    "ApiScopes": [
      "EShop.Identity.Service",
      "EShop.Administration.Service",

      "AdministrationAppGateway",
      "InternalGateway",
      "PublicWebSiteGateway"
    ],
    "Applications": {
      //"EShop.Identity.AuthServer.Web": {
      //  "ClientId": "EShop.Identity.AuthServer.Web",
      //  "ClientSecret": "1q2w3e*",
      //  "RootUrl": "https://localhost:44115"
      //},
      "EShop.Identity.Service.Swagger": {
        "ClientId": "EShop.Identity.Service.Swagger",
        "ClientSecret": "1q2w3e*",
        "RootUrl": "https://localhost:44105"
      },
      "EShop.Administration.Web": {
        "ClientId": "EShop.Administration.Web",
        "ClientSecret": "1q2w3e*",
        "RootUrl": "http://localhost:4200"
      },
      "EShop.Administration.Service.Swagger": {
        "ClientId": "EShop.Administration.Service.Swagger",
        "ClientSecret": "1q2w3e*",
        "RootUrl": "https://localhost:44145"
      }
    }
  }
}
